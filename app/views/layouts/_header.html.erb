<header>
  <nav>
    <% if user_signed_in? %>
      <%= link_to "こんにちは、#{current_user.name}さん", user_path(current_user), class: 'user-link' %>
      <%= link_to 'New Proto', new_prototype_path %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: { confirm: 'ログアウトしますか？' } %>
    <% else %>
      <%= link_to 'ログイン', new_user_session_path %>
      <%= link_to '新規登録', new_user_registration_path %>
    <% end %>
  </nav>
</header>
