<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規プロトタイプ投稿</h2>

      <% if @prototype.errors.any? %>
        <div class="error_messages">
          <h2><%= pluralize(@prototype.errors.count, "error") %>があります。</h2>
          <ul>
            <% @prototype.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render 'form', prototype: @prototype %>

      <%= link_to 'トップへ戻る', root_path, class: 'back-link' %>
    </div>
  </div>
</div>